//-----------------------------styles
.uppercase 
	text-transform uppercase
.capitalize 
	text-transform capitalize
.lowercase 
	text-transform lowercase
.italic 
	font-style italic
.normal-font 
	font-style normal



//position atoms
.absolute 
	adaptability(a: '', b: 'position', c: absolute)
.relative 
	adaptability(a: '', b: 'position', c: relative)
.fixed 
	adaptability(a: '', b: 'position', c: fixed)
.sticky 
	adaptability(a: '', b: 'position', c: sticky)
	
.top 
	adaptability(a: '', b: 'top', c: 0)
.left
	adaptability(a: '', b: 'left', c: 0)
.right
	adaptability(a: '', b: 'right', c: 0)
.bottom 
	adaptability(a: '', b: 'bottom', c: 0)
	
.behind-top
	bottom 100%
.behind-left 
	right 100%
.behind-right 
	left 100%	
.behind-bottom
	top 100%

//z-index 
for i in (-1..10)
	.z-{i}
		z-index  i

//opacity
for i in (0..10)
	.visible-{i}
		opacity (i / 10)
//font-weight
for i in 300 400 500 700 900
	.fw-{i}
		font-weight i	
//line-height
for i in (1..6)
	.lh-{i}
		line-height (1 + (i / 10))em

//border-radius
for i in  5 10 20 30 35 300
	.border-radius-{i}
		border-radius (i)px
.circle 
	border-radius  50%


//resets atoms
.padding-0
	padding 0
.margin-0
	margin 0
.top-reset
	top auto !important
.bottom-reset
	bottom auto !important
.right-reset
	right auto !important
.left-reset
	left auto !important
.width-reset 
	width auto !important
.height-reset 
	height auto !important
.border-reset
	border none
.collapse 
	transform scale(0)
	opacity 0

//greed atoms
.g-1 
	width percentage(1/1)
.g-2
	flex-basis 50%
	&-s
		@extend .g-1
		@media(min-width 767px)
			flex-basis 50%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 50%
.g-3 
	flex-basis 33%
	&-s 
		@extend .g-1
		@media(min-width 767px)
			flex-basis 33%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 33%

.g-4 
	flex-basis 25%
	&-s
		@extend .g-1
		@media(min-width 576px)
			flex-basis 50%
		@media(min-width 767px)
			flex-basis 25%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 25%
		
.g-5 
	flex-basis 20%
	&-s
		@extend .g-1
		@media(min-width 767px)
			flex-basis 20%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 20%
		
.g-6 
	flex-basis 16.5%
	&-s 
		@extend .g-1
		@media(min-width 767px)
			flex-basis 16.5%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 16.5%





//size atoms
.h-100 
	height 100%
.mh-100 
	max-height:  100%
.w-100 
	max-width 100%
.w-50 
	width 50%
.w-50-m
	@media(min-width 992px)
		width 50%
.vh-100 
	min-height 100vh


//cursor atoms
.pointer 
	cursor pointer
.arrow 
	cursor default

//transition atoms
.fluency 
	transition all .4s ease		
.fluency--fast 
	transition all .2s ease
.fluency--slow
	transition all .8s ease

//overflow atoms
.o-hidden
	overflow hidden
.o-hidden--x 
	overflow-x hidden
.o-hidden--y
	overflow-y hidden
.o-auto
	overflow auto

//page elements indent
.title 
	padding vw(title-top) 0 vw(title-bottom)
.section
	padding vw(section-top) 0 vw(section-bottom)
.button 
	padding vw(button-v) vw(button-h)