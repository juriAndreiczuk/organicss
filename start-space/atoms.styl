	font-style normal



//position atoms
.absolute 
	position absolute

.relative 
	position relative

.fixed 
	position fixed

.sticky 
	@media(min-width 992px)
		position sticky
.top 
	top 0
.left
	left 0
.right
	right 0
.bottom 
	bottom 0
	
.behind-top
	bottom 100%
.behind-left 
	right 100%
.behind-right 
	left 100%	
.behind-bottom
	top 100%


//resets atoms
.padding-0
	padding 0
.margin-0
	margin 0
.top-reset
	top auto !important
.bottom-reset
	bottom auto !important
.right-reset
	right auto !important
.left-reset
	left auto !important
.width-reset 
	width auto !important
.height-reset 
	height auto !important
.border-reset
	border none
.collapse 
	transform scale(0)
	opacity 0

//greed atoms
.g-1 
	width percentage(1/1)
.g-2
	flex-basis 48%
	&-s
		@extend .g-1
		@media(min-width 767px)
			flex-basis 48%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 48%
.g-3 
	flex-basis 31%
	&-s 
		@extend .g-1
		@media(min-width 767px)
			flex-basis 31%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 31%

.g-4 
	flex-basis 23%
	&-xs
		@extend .g-1
		@media(min-width 767px)
			flex-basis 23%
	&-s
		@extend .g-1
		@media(min-width 576px)
			flex-basis 43%
		@media(min-width 767px)
			flex-basis 23%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 23%
		
.g-5 
	flex-basis 22%
	&-s
		@extend .g-1
		@media(min-width 767px)
			flex-basis 22%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 22%
		
.g-6 
	flex-basis 15%
	&-s 
		@extend .g-1
		@media(min-width 767px)
			flex-basis 15%
	&-m
		@extend .g-1
		@media(min-width 992px)
			flex-basis 15%


//z-index 
for i in (-1..10)
	.z-{i}
		z-index  i

//opacity
for i in (0..10)
	.visible-{i}
		opacity (i / 10)
//font-weight
for i in 300 400 500 700 900
	.fw-{i}
		font-weight i	
//line-height
for i in (1..6)
	.lh-{i}
		line-height (1 + (i / 10))em

//border-radius
for i in  5 10 20 30 35 300
	.border-radius-{i}
		border-radius (i)px
.circle 
	border-radius  50%


//size atoms
.h-100 
	height 100%
.mh-100 
	max-height:  100%
.w-100 
	max-width 100%
.w-50 
	width 50%
.w-50-m
	@media(min-width 992px)
		width 50%
.vh-100 
	min-height 100vh


//cursor atoms
.pointer 
	cursor pointer
.arrow 
	cursor default

//transition atoms
.fluency 
	transition all .4s ease		
.fluency--fast 
	transition all .2s ease
.fluency--slow
	transition all .8s ease

//overflow atoms
.o-hidden
	overflow hidden
.o-hidden--x 
	overflow-x hidden
.o-hidden--y
	overflow-y hidden
.o-auto
	overflow auto

//page elements indent
.title 
	padding vw(17) 0 vw(15)
.section
	padding vw(section-top) 0 vw(section-bottom)
.button 
	padding vw(button-v) vw(button-h)