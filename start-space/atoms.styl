//display-atoms
.i-block 
	display inline-block

.block 
	display block

.inline 
	display inline

.flex 
	display flex
	flex-flow row wrap

.none 
	display none
	
.m-none
	@media (max-width 992px)
		display none

.d-none
	@media (min-width 992px)
		display none

.t-none 
	@media (max-width 1200px)
		display none

//flex-atoms
.flex-center 
	@extend .flex
	justify-content center

.flex-between 
	@extend .flex
	justify-content space-between

.flex-around 
	@extend .flex
	justify-content space-around


.flex-start 
	@extend .flex
	justify-content flex-start

.flex-end 
	@extend .flex
	justify-content flex-end

//----------------------------vertical-aligment 
.ai-center 
	align-items center

.ai-stretch 
	align-items stretch

.ai-start 
	align-items flex-start

.ai-end 
	align-items flex-end

//-----------------------------direction
.fd-reverse 
	flex-direction row-reverse

.fd-column 
	flex-direction column

.fd-column-reverse 
	flex-direction column-reverse


//containers
.wrap-s 
	width 100%
	margin 0 auto
	@media(min-width 992px)
		width work-size
	
.wrap-m
	width 100%
	margin 0 auto
	@media(min-width 992px)
		width 91.4%	


//fonts 
.center 
	text-align center
.text-left 
	@media (min-width 767px)
		text-align left

.text-right
	@media (min-width 992px)
		text-align right

.m-font 
	font-family main-font

.a-font 
	font-family additional-font

.icon-font
	font-family "Font Awesome 5 Free"
	font-weight 900 


//background-colors
.bg-border
	background-color border-color 
	
.bg-main
	background-color main-color

.bg-main--50
	background-color transparentify(main-color, main-color, .7)
.bg-accent
	background-color accent-color

.bg-text
	background-color text-color
.bg-text--50 
	background-color transparentify(text-color, .7)

.bg-title
	background-color title-color

.bg-body 
	background-color body-color

.bg-additional
	background-color additional-color

.bg-subtext
	background-color subtext-color

.bg-footer
	background-color footer-color	

.bg-transparent
	background-color transparent

.background-fixed
	@media(min-width 992px)
		background-attachment fixed
	
.background-center	
	background-position center

.background-bottom
	background-position bottom

.full-bg
	background-size cover
	
.bg-100
	background-size 100% auto

.accent-hover:hover
	background-color accent-color



	
