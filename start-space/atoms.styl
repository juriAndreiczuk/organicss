//text-atoms
fzDefine(ttl, titles-size, em, 9)
fzDefine(txt, text-size, em, 1)	

@media(min-width 1200px) {
  fzDefine(ttl, titles-size, vmax, 0)
}
@media(min-width 1600px) {
	fzDefine(txt, text-size, vmax, 0)	
}


//display-atoms
.none 
	adaptability(a: '', b: 'display', c: none)
.i-block 
	adaptability(a: '', b: 'display', c: inline-block)
.block 
	adaptability(a: '', b: 'display', c: block)
.inline 
	adaptability(a: '', b: 'display', c: inline)
//flex-atoms
.flex 
	display flex
	flex-flow row wrap
.flex-center 
	adaptability(a: '.flex', b: 'justify-content', c: center)
.flex-between 
	adaptability(a: '.flex', b: 'justify-content', c: space-between)
.flex-around 
	adaptability(a: '.flex', b: 'justify-content', c: space-around)
.flex-start
	adaptability(a: '.flex', b: 'justify-content', c: flex-start)
.flex-end 
	adaptability(a: '.flex', b: 'justify-content', c: flex-end)
//----------------------------vertical-aligment 
.ai-center 
	adaptability(a: '', b: 'align-items', c: center)
.ai-stretch 
	adaptability(a: '', b: 'align-items', c: stretch)
.ai-start 
	adaptability(a: '', b: 'align-items', c: flex-start)
.ai-end 
	adaptability(a: '', b: 'align-items', c: flex-end)

//-----------------------------direction
.fd-reverse 
	adaptability(a: '', b: 'flex-direction', c: row-reverse)
.fd-column 
	adaptability(a: '', b: 'flex-direction', c: column)
.fd-column-reverse 
	adaptability(a: '', b: 'flex-direction', c: column-reverse)

//container
.wrap 
	width 100%
	margin 0 auto
	@media(min-width 992px)
		width work-size
	


//fonts 
.center 
	adaptability(a: '', b: 'text-align', c: center)
.text-left 
	adaptability(a: '', b: 'text-align', c: left)
.text-right
	adaptability(a: '', b: 'text-align', c: right)
.ff-main 
	font-family main-font
.ff-extra 
	font-family additional-font


//background-colors
.bg-border
	background-color border-color 
.bg-main
	background-color main-color
.bg-main--50
	background-color transparentify(main-color, main-color, .5)
.bg-accent
	background-color accent-color
.bg-text
	background-color text-color
.bg-title
	background-color title-color
.bg-body 
	background-color body-color
.bg-additional
	background-color additional-color
.bg-subtext
	background-color subtext-color
.bg-footer
	background-color footer-color	
.bg-transparent
	background-color transparent
.accent-hover:hover
	background-color accent-color
.background-fixed
	@media(min-width 992px)
		background-attachment fixed
.background-center	
	background-position center
.background-bottom
	background-position bottom
.full-bg
	background-size cover
.bg-100
	background-size 100% auto


